{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "AllowBuilderToManageBucket",
            "Effect": "Allow",
            "Action": [
                "s3:*"
            ],
            "Resource": [
                "arn:aws:s3:::drone-data-*"
            ],
            "Condition": {
                "StringLike": {
                    "aws:userid": [
                        "${ASSUMED_ROLE_USER_ID}:*",
                        "${ACCOUNT_NUMBER}"
                    ]
                }
            }
        },
        {
            "Sid": "DenyEveryoneButBuilder",
            "Effect": "Deny",
            "Action": "s3:*",
            "Resource": [
                "arn:aws:s3:::drone-data-*"
            ],
            "Condition": {
                "StringNotLike": {
                    "aws:userId": [
                        "${ASSUMED_ROLE_USER_ID}:*",
                        "${ACCOUNT_NUMBER}"
                    ]
                }
            }
        }
    ]
}