{
  "builders": [
    {
      "type": "amazon-ebs",
      "vpc_id": "",
      "access_key": "{{user `aws_access_key`}}",
      "ami_description": "{{user `name`}} AMI",
      "ami_name": "{{user `name`}} {{timestamp}}",
      "associate_public_ip_address": true,
      "instance_type": "t2.micro",
      "name": "{{user `name`}}",
      "region": "{{user `region`}}",
      "run_tags": {
        "ami-create": "{{user `name`}}"
      },
      "secret_key": "{{user `aws_secret_key`}}",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "ubuntu/images/*ubuntu-bionic-18.04-amd64-server-*",
          "root-device-type": "ebs"
        },
        "owners": ["099720109477"],
        "most_recent": true
      },
      "ssh_interface": "public_ip",
      "ssh_timeout": "5m",
      "ssh_username": "{{user `ssh_username`}}",
      "subnet_id": "",
      "tags": {
        "Drone": "drone-{{user `drone_version`}}",
        "Base_AMI_Name": "{{ .SourceAMIName }}",
        "Extra": "{{ .SourceAMITags.TagName }}"
      }
    }
  ],
  "provisioners": [
    {
      "destination": "/tmp/bootstrap_docker.sh",
      "source": "bootstrap_docker.sh",
      "type": "file"
    },
    {
      "destination": "/tmp/bootstrap_docker_compose.sh",
      "source": "bootstrap_docker_compose.sh",
      "type": "file"
    },
    {
      "destination": "/tmp/bootstrap_drone.sh",
      "source": "bootstrap_drone.sh",
      "type": "file"
    },
    {
      "destination": "/tmp/build_aws_cli_image.sh",
      "source": "build_aws_cli_image.sh",
      "type": "file"
    },
    {
      "destination": "/tmp/aws-cli.Dockerfile",
      "source": "aws-cli.Dockerfile",
      "type": "file"
    },
    {
      "destination": "/tmp/cleanup.sh",
      "source": "cleanup.sh",
      "type": "file"
    },
    {
      "destination": "/tmp/docker-compose.yaml",
      "source": "docker-compose.yaml",
      "type": "file"
    },
    {
      "destination": "/tmp/drone.service",
      "source": "drone.service",
      "type": "file"
    },
    {
      "destination": "/tmp/drone_reload.service",
      "source": "drone_reload.service",
      "type": "file"
    },    
    {
      "environment_vars": [
        "DRONE_VERSION={{user `drone_version`}}",
        "DRONE_IMAGE={{user `drone_image`}}",
        "DOCKER_COMPOSE_VERSION={{user `docker_compose_version`}}",
        "AWS_ACCESS_KEY_ID={{user `aws_access_key`}}",
        "AWS_SECRET_ACCESS_KEY={{user `aws_secret_key`}}",
        "AWS_CLI_BASE_IMAGE={{user `aws_cli_base_image`}}"
      ],
      "execute_command": "echo 'packer' | sudo -S sh -c '{{ .Vars }} {{ .Path }}'",
      "inline": [
        "cd /tmp",
        "chmod +x bootstrap_docker.sh",
        "chmod +x bootstrap_docker_compose.sh",
        "chmod +x bootstrap_drone.sh",
        "chmod +x build_aws_cli_image.sh",
        "chmod +x cleanup.sh",
        "./bootstrap_docker.sh",
        "./bootstrap_docker_compose.sh",
        "./bootstrap_drone.sh",
        "./build_aws_cli_image.sh",
        "sleep 10",
        "./cleanup.sh",
        "mv drone.service /etc/systemd/system/",
        "mv drone_reload.service /etc/systemd/system/",
        "mv docker-compose.yaml /home/ubuntu/",
        "chown ubuntu:ubuntu /home/ubuntu/docker-compose.yaml",
        "chown root:root /etc/systemd/system/drone.service",
        "chown root:root /etc/systemd/system/drone_reload.service"
      ],
      "type": "shell"
    }
  ],
  "post-processors": [
    {
      "type": "manifest",
      "output": "manifest.json",
      "strip_path": true
    }
  ],
  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
    "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
    "name": "podchaser-drone-server",
    "ssh_username": "ubuntu",
    "region": "us-east-1",
    "drone_version": "1.0.8",
    "drone_image": "drone/drone:1",
    "docker_compose_version": "1.24.0",
    "aws_cli_base_image": "python:3.7"
  }
}